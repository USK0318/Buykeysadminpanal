{{>header}}
<style>
    .inputdiv {
            display: flex;
            align-items: center;
            width: 100%;
            max-width: 1300px;
            padding: 5px;
            border: 2px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            background-color: #fff;
            margin-top: 10PX;
        }
        .inputdiv input {
            flex: 1;
            padding: 10px 15px;
            border: none;
            border-radius: 4px 0 0 4px;
            font-size: 16px;
            box-sizing: border-box;
        }
        .inputdiv button {
            padding: 10px 15px;
            border: none;
            background-color: #fff;
            border-radius: 0 4px 4px 0;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        .inputdiv button:hover {
            background-color: #ccc;
        }
        .inputdiv button i {
            font-size: 20px;
        }
        @media (max-width: 600px) {
            .inputdiv {
                width: 100%;
                margin: 10px;
            }
            .inputdiv input, .inputdiv button {
                font-size: 14px;
                padding: 8px;
            }
            .inputdiv button i {
                font-size: 18px;
            }
        }
</style>
       <div class="inputdiv">
        <input type="text" id="searchInput" onkeyup="searchTable()" placeholder="Search here">
        <button><i class="fa-solid fa-magnifying-glass"></i></button>
    </div>

    <div class="print">
        <button style="border-top-left-radius: 10px; border-bottom-left-radius: 10px;" onclick="printTable('productTable')">Print</button>
