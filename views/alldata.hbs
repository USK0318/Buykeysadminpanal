{{>header}}
<style>
    .inputdiv {
            display: flex;
            align-items: center;
            width: 100%;
            max-width: 1400px;
            padding: 5px;
            border: 2px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            background-color: #fff;
            margin-top: 10PX;
        }
        .inputdiv input {
            flex: 1;
            padding: 10px 15px;
            border: none;
            border-radius: 4px 0 0 4px;
            font-size: 16px;
            box-sizing: border-box;
        }
        .inputdiv button {
            padding: 10px 15px;
            border: none;
            background-color: #fff;
            border-radius: 0 4px 4px 0;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        .inputdiv button:hover {
            background-color: #ccc;
        }
        .inputdiv button i {
            font-size: 20px;
        }
        .delbut {
            background-color: #f44336;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            transition-duration: 0.4s;
        }
        @media (max-width: 600px) {
            .inputdiv {
                width: 100%;
                margin: 10px;
            }
            .inputdiv input, .inputdiv button {
                font-size: 14px;
                padding: 8px;
            }
            .inputdiv button i {
                font-size: 18px;
            }
        }
</style>

<div class="inputdiv">
