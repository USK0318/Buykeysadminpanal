{{> header}}
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

body {
  font-family: Arial, sans-serif;
  background-color: #f8f9fa;
  color: #343a40;
}

.container1 {
  width: 90%;
  max-width: 1600px;
  margin: 5% auto;
  background:none;
  padding: 2rem;
}

.form-row {
  display: flex;
  margin-bottom: 1.5rem;
}


.form-group label {
  font-weight: bold;
  margin-bottom: 0.5rem;
  display: block;
}


.form-control {
  width: 100%;
  margin: 5px;
  padding: 0.75rem;
  border: 1px solid #ced4da;
  border-radius: 0.25rem;
  font-size: 1rem;
}

.form-control:focus {
  border-color: #007bff;
  box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.25);
}

.custom-file {
  position: relative;
  display: flex;
  align-items: center;
}

.custom-file-input {
  position: absolute;
  z-index: 1;
  opacity: 0;
  cursor: pointer;
}

.custom-file-label {
  position: relative;
  padding: 0.75rem;
  background-color: #e9ecef;
  border: 1px solid #ced4da;
  border-radius: 0.25rem;
  display: inline-block;
  width: 100%;
  text-align: center;
}

.custom-file-label::after {
  content: "Browse";
}

.custom-file-label.selected::after {
  content: "Selected";
}

.btn-primary {
  background-color: #007bff;
  border-color: #007bff;
  color: #ffffff;
  padding: 0.75rem 1.25rem;
  border-radius: 0.25rem;
  font-size: 1rem;
  font-weight: bold;
  cursor: pointer;
  transition: background-color 0.2s, border-color 0.2s;
  display: inline-block;
}

.btn-primary:hover {
  background-color: #0069d9;
  border-color: #0062cc;
}
.form-group1 {
  width: 50%;
  margin-left: 20px;
}
.form-group2 {
  width: 50%;
}
.form-group label{
    margin-top: 10px;
}
.form-group input {
    margin-bottom: 10px;
}
.form-group select {
    margin-top: 10px;
    margin-bottom: 20px;
}

.form-group2 label {
  font-weight: bold;
  display: block;
}
.form-group1 label {
  font-weight: bold;
  display: block;
}
.form-groupx label {
  font-weight: bold;
  display: block;
  margin: 8px 0;
}
.form-groupx input {
  margin-bottom: 10px;
  height: 80px;
}

.butclass{
    margin-left: 450px;

}

.butclass button{
  margin-right: 10px;
  margin-top: 40px;
  width: 150px;
  height: 50px;

}
@media (max-width: 768px) {
  .form-row {
    flex-direction: column;
  }
  
  .form-group {
    width: 100%;
    max-width: 100%;
  }
  .form-group1 {
    width: 100%;
    margin-left: 0px;
  }
  .form-group2 {
    width: 100%;
    margin-left: 0px;
  }
  .form-groupx {
    width: 100%;
    margin-left: 0px;
  }
  .butclass{
    margin-left: 0px;
  }
  .butclass button{
    margin-top: 5px;
    width: 150px;
    height: 50px;
  }
}

</style>

<div class="container1 mt-4">
  <form>
      <div class="form-group" style="width: 100%;">
        <label for="fullName">Full Name</label>
        <input type="text" class="form-control" id="fullName" placeholder="Full Name" required>
      </div>
      <div class="form-group" style="width: 100%;">
        <label for="employmentType">Employment Type</label>
        <select id="employmentType" class="form-control">
          <option selected>Choose...</option>
          <option>Salaried</option>
          <option>Self-Employed</option>
          <option>Student</option>
          <option>Retired</option>
        </select>
      </div>
    <div class="form-row">
      <div class="form-group2">
        <label for="dateOfJoining">Date Of Joining</label>
        <input type="date" class="form-control" id="dateOfJoining" required>
      </div>
      
      <div class="form-group1">
        <label for="dateOfBirth">Date of Birth</label>
        <input type="date" class="form-control" id="dateOfBirth" required>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group2">
        <label for="state">State</label>
        <select id="state" class="form-control">
          <option selected>Choose...</option>
          <option>State 1</option>
          <option>State 2</option>
          <option>State 3</option>
          <option>State 4</option>
        </select>
      </div>
      <div class="form-group1">
        <label for="district">District</label>
        <select id="district" class="form-control">
          <option selected>Choose...</option>
          <option>District 1</option>
          <option>District 2</option>
          <option>District 3</option>
          <option>District 4</option>
        </select>
      </div>
    </div>

    <div class="form-group" style="width: 100%;">
      <label for="address">Address</label>
      <input type="text" class="form-control" id="address" placeholder="Enter Address" required>
    </div>

    <div class="form-group" style="width: 100%;">
      <label for="areaPin">Area & PIN code</label>
      <input type="text" class="form-control" id="areaPin" placeholder="Enter Area & PIN code" required>
    </div>

    <div class="form-row">
      <div class="form-group2">
        <label for="contactNo">Contact No.</label>
        <input type="tel" class="form-control" id="contactNo" placeholder="Enter Contact Number" required>
      </div>
      <div class="form-group1">
        <label for="mailId">Mail ID</label>
        <input type="email" class="form-control" id="mailId" placeholder="Enter Mail ID" required>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group2">
        <label for="customerId">Customer ID</label>
        <input type="text" class="form-control" id="customerId" placeholder="Enter ID Number" required>
      </div>
      <div class="form-group1"> 
        <label for="loanType">Loan Type</label>
        <select id="loanType" class="form-control">
          <option selected>Choose...</option>
          <option>Two wheeler</option>
          <option>Four wheeler</option>
          <option>Home Loan</option>
          <option>Personal Loan</option>
        </select>
      </div>
    </div>

    <div class="form-groupx">
      <label for="profileImage">Profile Image</label>
      <div class="custom-file">
        <input type="file" class="custom-file-input" id="profileImage" accept="image/*">
        <label class="custom-file-label" for="profileImage">Choose file</label>
      </div>
    </div>
   <div class="butclass">
     <button type="submit" style="border: 3px solid #4A3AFF;
    background:none;
    color: #4A3AFF;
     
     " class="btn btn-primary">Cancel</button>
    <button type="submit" style="background-color: #4A3AFF;
    color: white;
    border: 3px solid #4A3AFF;
    border-radius: 3px;
    " class="btn btn-primary
    "><b>Save</b></button>
   </div>
  </form>
</div>

{{> footer}}