{{>header}}

    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f8f8f8;
        }
        .main {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .container1 {
            display: flex;
            justify-content: space-between;
            padding: 20px;
            flex-wrap: wrap;
        }

        .card {
            background-color: #fff;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            width: calc(25% - 20px);
            margin-bottom: 20px;
            text-align: center;
            box-sizing: border-box;
        }

        .card h3 {
            margin-bottom: 10px;
        }

        .card p {
            font-size: 14px;
            color: #666;
        }

        .card .icon {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .lucky-draw, .winner-announcement, .loan-request, .message-form {
            width: 49%;
            background-color: #fff;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin: 20px 0;
            box-sizing: border-box;
        }

        .lucky-draw .image-container1, 
        .winner-announcement .image-container1 {
            background-color: #f4f4f4;
            padding: 20px;
            border-radius: 10px;
            text-align: center;
            margin-bottom: 20px;
        }

        .lucky-draw .image-container1 img,
        .winner-announcement .image-container1 img {
            max-width: 100%;
            max-height: 200px;
            border-radius: 10px;
        }

        .lucky-draw .timer {
            background-color: #f4f4f4;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .button {
            background-color: #4A3AFf;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            margin-right: 10px;
            margin-top: 5px;
        }

        .winner-announcement .input-field {
            margin-bottom: 20px;
        }

        .winner-announcement input[type="text"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-sizing: border-box;
        }

        .loan-request table {
            width: 100%;
            border-collapse: collapse;
        }

        .loan-request th, .loan-request td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
            font-size: 14px;
        }

        .message-form textarea {
            width: 100%;
            height: 300px;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-sizing: border-box;
            margin-top: 5px;
        }

        .card:hover {
            transform: translateY(-5px);
            transition: 0.3s;
            cursor: pointer;
        }
        @media screen and (max-width: 768px) {
            .main {
                flex-direction: column;
            }
            .lucky-draw, .winner-announcement, .loan-request, .message-form {
                width: 100%;
            }

            .card {
                width: calc(50% - 20px);
            }

            .loan-request th, .loan-request td {
                font-size: 12px;
            }

            .button {
                font-size: 14px;
                padding: 8px 16px;
            }

            .lucky-draw .timer {
                font-size: 16px;
                padding: 8px 16px;
            }
        }

        @media screen and (max-width: 480px) {
            .container1 {
                flex-direction: column;
                align-items: center;
            }

            .card {
                width: 100%;
            }

            .button {
                width: 100%;
                margin-top: 10px;
            }

            .message-form textarea {
                height: 80px;
            }
        }

    </style>
</head>

