{{>header}}
<style>
.hip {
  display: flex;
  flex-wrap: wrap;
  gap: 30px;
}

.card {
  margin-left: 20px;
  margin-right: 20px;
  width: 480px; 
  height: inherit;
  min-height: 230px;
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  padding: 20px;
  text-align: left;
}

.card h2 {
  font-size: 1.7rem;
  margin: 20px;
  color: white;
}

.card p {
  font-size: 1.2rem;
  margin: 20px;
  color: white;
}

.card button {
  background-color: white;
  color: black;
  padding: 10px 20px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  font-size: 1rem;
  width: 90%;
  height: 45px;
  margin-top: 20px;
  margin-left: 20px;
}
.butid {
  display: flex;
  justify-content: right;
}
#pop{
   width: 150px;
    padding: 8px;
    baground-color: none;
    border: 2px solid #4A3AFF;
    border-radius: 5px;
    color: #4A3AFF;
    margin-right: 70px;
    margin-bottom: 20px;
    
}

.pop-popup {
    display: none; /* Hidden by default */
    position: fixed; /* Stay in place */
    z-index: 1; /* Sit on top */
    left: 0;
    top: 0;
    width: 100%; /* Full width */
    height: 100%; /* Full height */
    overflow: auto; /* Enable scroll if needed */
    background-color: rgba(0, 0, 0, 0.5); /* Black w/ opacity */
}

.pop-popup-content {
    background-color: #fff;
    margin: 5% auto; /* 5% from the top and centered */
    padding: 20px;
    border-radius: 5px;
    width: 90%; /* Could be more or less, depending on screen size */
    max-width: 600px;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    animation: fadeIn 0.5s;
    text-align: left;
    margin-top: 90px;
}

.pop-close-btn {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
}

.pop-close-btn:hover,
.pop-close-btn:focus {
    color: black;
    text-decoration: none;
    cursor: pointer;
}

.pop-form-group {
    margin-bottom: 15px;
    display: flex;
    align-items: center;
}

.pop-form-group label {
    width: 150px; /* Fixed width for labels */
    font-weight: bold;
}

.pop-form-group input,
.pop-form-group textarea  {
    width: calc(100% - 150px); /* Adjust width to fit next to label */
    padding: 10px;
    box-sizing: border-box;
    border: 1px solid #ccc;
    border-radius: 1px;
}
#popAction{
     width: calc(100% - 150px); /* Adjust width to fit next to label */
    padding: 10px;
    box-sizing: border-box;
    border: 1px solid #ccc;
    border-radius: 1px;
} 


.pop-form-group textarea {
    resize: none;
}

.pop-form-group button {
    width: 40%;
    padding: 10px;
    background-color: #6052FF;
    color: white;
    border: none;
    border-radius: 3px;
    cursor: pointer;
    font-size: 16px;
    margin-left: 170px;
}

.pop-form-group button:hover {
    background-color: #9f96fd;

}

@keyframes fadeIn {
    from {opacity: 0;}
    to {opacity: 1;}
}

</style>

<div class="butid">
    <button
    id="pop"
    >Add Loan Field</button>

</div>
<div class="hip">
<div class="card" style="background: linear-gradient(to right, #ff9800, #ffc107);">
    <h2>TWO WHEELER LOAN</h2>
    <p>Total Customer: 5000</p>
    <a href="/admin/twowheeler"><button>View Details</button></a>
  </div>
  <div class="card" style="background: linear-gradient(to right, #1badf0, #2196f3);">
    <h2>FOUR WHEELER LOAN</h2>
    <p>Total Customer: 5000</p>
    <a href="/admin/fourwheeler"><button>View Details</button></a>
  </div>
  <div class="card" style="background:linear-gradient(to right, #9c27b0, #e91e63)">
    <h2>HOME APPLIANCES LOAN</h2>
    <p>Total Customer: 5000</p>
    <a href="/admin/homeappliances"><button>View Details</button></a>
  </div>
     <div id="popup" class="pop-popup">
        <div class="pop-popup-content">
            <span class="pop-close-btn" id="closePopupBtn">&times;</span>
            <form id="popForm" action="#" method="post" enctype="multipart/form-data">
                <h2 style="margin: 30px;
                text-align: center;
                ">Loan Application</h2>
                <div class="pop-form-group">
                    <label for="popTitle">Title</label>
                    <input type="text" id="popTitle" name="title" required>
                </div>
                <div class="pop-form-group">
                    <label for="popDescription">Description</label>
                    <textarea id="popDescription" name="description" rows="4" required></textarea>
                </div>
                <div class="pop-form-group">
                    <label for="popLoanAmount">Loan Amount</label>
                    <input type="number" id="popLoanAmount" name="loanAmount" required>
                </div>
                <div class="pop-form-group">
                    <label for="popMonths">Months</label>
                    <input type="number" id="popMonths" name="months" required>
                </div>
                <div class="pop-form-group">
                    <label for="popInterest">Interest Rate (%)</label>
                    <input type="number" id="popInterest" name="interest" step="0.01" required>
                </div>
                <div class="pop-form-group">
                    <label for="popUpload">Upload Document</label>
                    <input type="file" id="popUpload" name="upload" required>
                </div>
                <div class="pop-form-group">
                    <label for="popUpload">Action</label>
                    <select id="popAction" name="action" required>
                        <option value="approve">Approve</option>
                        <option value="reject">Reject</option>
                    </select>
                </div>
                <div class="pop-form-group">
                    <button type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
  const pop = document.getElementById('pop');
  const popup = document.getElementById('popup');
  const popupContent = document.getElementById('popup-content');
  const closePopupBtn = document.getElementById('closePopupBtn');

  pop.addEventListener('click', () => {
    popup.style.display = 'block';
  });

  closePopupBtn.addEventListener('click', () => {
    popup.style.display = 'none';
  });

  window.addEventListener('click', (e) => {
    if (e.target === popup) {
      popup.style.display = 'none';
    }
  });

</script>


