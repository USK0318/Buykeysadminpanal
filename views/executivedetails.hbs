}

.profile-value {
    color: #666;
}

.pop-popup {
    display: none; /* Hidden by default */
    position: fixed; /* Stay in place */
    z-index: 1; /* Sit on top */
    left: 0;
    top: 0;
    width: 100%; /* Full width */
    height: 100%; /* Full height */
    overflow: auto; /* Enable scroll if needed */
    background-color: rgba(0, 0, 0, 0.5); /* Black w/ opacity */
}

.pop-popup-content {
    background-color: #fff;
    margin: 5% auto; /* 5% from the top and centered */
    padding: 20px;
    border-radius: 5px;
    width: 90%; /* Could be more or less, depending on screen size */
    max-width: 600px;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    animation: fadeIn 0.5s;
    text-align: left;
    margin-top: 110px;
}

.pop-close-btn {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
}

.pop-close-btn:hover,
.pop-close-btn:focus {
    color: black;
    text-decoration: none;
    cursor: pointer;
}

.pop-form-group {
    margin-bottom: 15px;
    display: flex;
    align-items: center;
}

.pop-form-group label {
    width: 150px; /* Fixed width for labels */
    font-weight: bold;
}

.pop-form-group input,
.pop-form-group textarea {
    width: calc(100% - 150px); /* Adjust width to fit next to label */
    padding: 10px;
    box-sizing: border-box;
    border: 1px solid #ccc;
    border-radius: 2px;
}

.pop-form-group textarea {
    resize: none;
}

.pop-form-group button {
    width: 100%;
    padding: 10px;
    background-color: #6052FF;
    color: white;
    border: none;
    border-radius: 2px;
    cursor: pointer;
    font-size: 16px;
}

.pop-form-group button:hover {
    background-color: #9f96fd;

}

@keyframes fadeIn {
    from {opacity: 0;}
    to {opacity: 1;}
}

