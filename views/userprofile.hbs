{{>header}}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <title>User Profile</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
        }
        .header {
            background-color: #6052FF;
            padding: 15px;
            color: white;
            border-radius: 5px;
            margin-bottom: 20px;
        }
        .header h1 {
            margin: 0;
            font-size: 24px;
            padding: 10px;
        }
        .container {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
        }
        .sideprofile1 {
            flex: 1;
            max-width: 300px;
            background-color: #6052FF;
            color: white;
            padding: 20px;
            border-radius: 5px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .sideprofile1 .profile-info {
            width: 100%;
            display: flex;
            justify-content: space-between;
            margin: 5px 0;
        }
        .sideprofile1 i {
            color: black;
            font-size: 100px;
            margin-top: 40px;
            margin-bottom: 20px;
        }
        .formdiv {
            flex: 2;
            max-width: 1110px;
            background-color: #6052FF;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .formdiv form {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }
        .formdiv label {
            color: white;
            font-weight: bold;
            margin-bottom: 5px;
        }
        .formdiv input {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
        }
        .formdiv button {
            background-color: #187db7;
            color: white;
            border: none;
            padding: 10px;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            width: 30%;
        }
        .formdiv button:hover {
            background-color: #41a92d;
            color: #feffff;
        }
        .switch {
            position: relative;
            display: inline-block;
            width: 90px;
            height: 40px;
        }
        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }
        .slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #e80707;
            transition: .4s;
            border-radius: 34px;
        }
        .slider:before {
            position: absolute;
            content: "";
            height: 32px;
            width: 32px;
            left: 4px;
            bottom: 4px;
            background-color: #ccc;
            transition: .4s;
            border-radius: 50%;
        }
        input:checked + .slider {
            background-color: #3f8e07;
        }
        input:focus + .slider {
            box-shadow: 0 0 2px #3f8e07;
        }
        input:checked + .slider:before {
            transform: translateX(50px);
        }
        .admin-status {
            color: white;
        }
        .admin-status.true {
            color: rgb(249, 249, 249);
        }
        .button-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 10px; /* Optional: Adds space between buttons */
        }
        .profile-info p {
            margin: 5px 0;
        }

        @media (max-width: 600px) {
            .header {
                width: 100%;
            }
            .header h1 {
                font-size: 20px;
            }
            .container {
                flex-direction: column;
            }
            .sideprofile1 {
                width: 97%;
                max-width: 97%;
                align-items: flex-start;
                margin-right: 10px;
            }
            .sideprofile1 i {
                align-self: center;
                margin-bottom: 20px;
            }
            .formdiv {
                max-width: 97%;
                width: 100%;
            }
            .switch {
                width: 70px;
                height: 30px;
            }
            .slider:before {
                height: 20px;
                width: 20px;
            }
            input:checked + .slider:before {
                transform: translateX(40px);
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="sideprofile1">
            <i class="fa-solid fa-user"></i>
            <div class="profile-info">
                <p><strong>Username:</strong></p>
                <p>Sai Kiran</p>
            </div>
            <div class="profile-info">
                <p><strong>Phone:</strong></p>
                <p>1234567890</p>
            </div>
            <div class="profile-info">
                <p><strong>Admin:</strong></p>
                <p id="admin-status" class="admin-status">False</p>
            </div>
            <div class="profile-info">
                <p><strong>Referral Code:</strong></p>
                <p>123456</p>
            </div>
            <div class="profile-info">
                <p><strong>Referral ID:</strong></p>
                <p>55</p>
            </div>
        </div>
        <div class="formdiv">
            <form>
                <label for="username">Username</label>
                <input type="text" id="username" name="username" placeholder="Username">
                <label for="phone">Phone</label>
                <input type="text" id="phone" name="phone" placeholder="Phone">
                <label for="referralcode">Referral Code</label>
                <input type="text" id="referralcode" name="referralcode" placeholder="Referral Code">
                <label for="referralid">Referral ID</label>
                <input type="text" id="referralid" name="referralid" placeholder="Referral ID">
                <label for="isadmin">Admin</label>
                <label class="switch">
                    <input type="checkbox" id="admin-toggle">
                    <span class="slider round"></span>
                </label>
                <div class="button-container">
                    <button type="submit">Update</button>
                    <button style="background-color: #e80707;">Delete</button>
                </div>
           </form>
        </div>
    </div>
    <script>
        document.getElementById('admin-toggle').addEventListener('change', function() {
            const adminStatus = document.getElementById('admin-status');

            if (this.checked) {
                adminStatus.textContent = 'True';
                adminStatus.classList.add('true');
            } else {
                adminStatus.textContent = 'False';
                adminStatus.classList.remove('true');
            }
        });

        // Initial setting based on the admin status
        window.addEventListener('DOMContentLoaded', (event) => {
            const adminStatus = document.getElementById('admin-status');
            const adminToggle = document.getElementById('admin-toggle');
            
            if (adminStatus.textContent === 'True') {
                adminToggle.checked = true;
                adminStatus.classList.add('true');
            } else {
                adminToggle.checked = false;
                adminStatus.classList.remove('true');
            }
        });
    </script>
</body>
</html>
